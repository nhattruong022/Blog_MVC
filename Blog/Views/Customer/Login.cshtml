
@{
	ViewData["Title"] = "Login Page";
}

@section Link {
    <link href="@Url.Content("~/layout/styles/layout.css")" rel="stylesheet" type="text/css" media="all">
    <link href="@Url.Content("~/layout/styles/login.css")" rel="stylesheet">
}


    <div class="container">
        <div class="form-box">
            <h2 id="form-title">Login</h2>
            <form id="auth-form">
                <div class="input-group">
                    <input type="text" id="user" placeholder="UserName" required>
                </div>
                <div class="input-group">
                    <input type="password" id="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn">Login</button>
                <p class="toggle-text">Chưa có tài khoản? <a href="#" id="toggle-register">Sign Up</a></p>
            </form>
        </div>
    </div>
